{
  "version": 2,
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/daily-passage.js": {
      "maxDuration": 30
    },
    "api/posts.js": {
      "maxDuration": 10
    }
  }
}
