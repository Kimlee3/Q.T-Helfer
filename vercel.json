{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.cjs",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/daily-passage.cjs": {
      "maxDuration": 30
    },
    "api/posts.cjs": {
      "maxDuration": 10
    }
  }
}
